[Unit]
Description=WSO2 API Manager - Devportal profile
After=network.target

[Service]
ExecStart=/bin/bash {{ carbon_home }}/bin/wso2server.sh -Dprofile=api-devportal start
ExecStop=/bin/bash {{ carbon_home }}/bin/wso2server.sh stop
ExecRestart=/bin/bash {{ carbon_home }}/bin/wso2server.sh restart
PIDFile={{ carbon_home }}/wso2carbon.pid
User={{ wso2_user }}
Group={{ wso2_group }}
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3
TimeoutSec=300

[Install]
WantedBy=multi-user.target

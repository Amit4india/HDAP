[Unit]
Description=WSO2 API Manager - Default profile
After=network.target

[Service]
ExecStart=/bin/bash {{ carbon_home }}/bin/wso2server.sh start
ExecStop=/bin/bash {{ carbon_home }}/bin/wso2server.sh stop
ExecRestart=/bin/bash {{ carbon_home }}/bin/wso2server.sh restart
PIDFile={{ carbon_home }}/wso2carbon.pid
User={{ wso2_user }}
Group={{ wso2_group }}
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3
TimeoutSec=900
[Install]
WantedBy=multi-user.target

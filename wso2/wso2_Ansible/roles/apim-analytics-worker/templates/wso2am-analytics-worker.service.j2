[Unit]
Description=WSO2 API Manager Analytics - Worker
After=network.target

[Service]
ExecStart=/bin/bash {{ carbon_home }}/wso2/worker/bin/carbon.sh start
ExecStop=/bin/bash {{ carbon_home }}/wso2/worker/bin/carbon.sh stop
ExecRestart=/bin/bash {{ carbon_home }}/wso2/worker/bin/carbon.sh restart
PIDFile={{ carbon_home }}/wso2/worker/runtime.pid
User={{ wso2_user }}
Group={{ wso2_group }}
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3
TimeoutSec=300
[Install]
WantedBy=multi-user.target
